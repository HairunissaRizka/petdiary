<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/white"
        android:elevation="10dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarPopupTheme"
        app:title="@string/Pet_Product_Reviews_Page"
        app:titleTextAppearance="@style/ToolbarTitleStyle"
        app:titleTextColor="@color/black">

        <ImageView
            android:id="@+id/notification_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="16dp"
            android:contentDescription="@string/notification_icon_description"
            android:src="@drawable/baseline_notifications_24" />

    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:id="@+id/poster_review_page"
        android:layout_width="match_parent"
        android:layout_height="232dp"
        android:layout_weight="1"
        android:padding="10dp"
        app:srcCompat="@drawable/poster_review" />

    <!-- Browse Product by Pet Types -->
    <TextView
        android:id="@+id/browse_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/roboto_medium"
        android:padding="10dp"
        android:text="@string/browse_product_by_pet_types"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <!-- Pet Types Options -->
    <HorizontalScrollView
        android:id="@+id/pet_options_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:contentDescription="@string/scroll_horizontally_to_view_pet_options"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/cat_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/rounded_corner_background_pet_category"
                android:padding="10dp"
                android:src="@drawable/cat" />

            <ImageView
                android:id="@+id/dog_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/rounded_corner_background_pet_category"
                android:padding="10dp"
                android:src="@drawable/dog" />

            <ImageView
                android:id="@+id/rabbit_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/rounded_corner_background_pet_category"
                android:padding="10dp"
                android:src="@drawable/rabbit" />

            <ImageView
                android:id="@+id/hamster_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/rounded_corner_background_pet_category"
                android:padding="10dp"
                android:src="@drawable/hamster" />

            <ImageView
                android:id="@+id/fish_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/rounded_corner_background_pet_category"
                android:padding="10dp"
                android:src="@drawable/fish" />

            <!-- Add more pet type icons here -->

        </LinearLayout>
    </HorizontalScrollView>

    <!-- Most Reviews Products -->
    <TextView
        android:id="@+id/most_reviews_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/roboto_medium"
        android:padding="10dp"
        android:text="@string/most_reviews_products"
        android:textColor="@color/black"
        android:textSize="20sp" />


    <!-- Card Product -->
    <HorizontalScrollView
        android:id="@+id/product_card_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:contentDescription="@string/scroll_horizontally_to_view_product"
        android:scrollbars="none">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="left"
        android:orientation="horizontal">

        <!-- Card Product -->
        <androidx.cardview.widget.CardView
            android:id="@+id/product_card1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginBottom="5dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner_background_product_card"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp">

                <!-- Product Image -->
                <ImageView
                    android:id="@+id/product_image1"
                    android:layout_width="174dp"
                    android:layout_height="239dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/image_22" />

                <!-- Rating & Reviews -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/rating_star1"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginEnd="4dp"
                            android:src="@drawable/star" />

                        <ImageView
                            android:id="@+id/rating_star2"
                            android:layout_width="25dp"
                            android:layout_height="35dp"
                            android:layout_marginEnd="4dp"
                            android:src="@drawable/star" />

                        <ImageView
                            android:id="@+id/rating_star3"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginEnd="4dp"
                            android:src="@drawable/star" />

                        <ImageView
                            android:id="@+id/rating_star4"
                            android:layout_width="25dp"
                            android:layout_height="35dp"
                            android:layout_marginEnd="4dp"
                            android:src="@drawable/star" />

                        <ImageView
                            android:id="@+id/rating_star"
                            android:layout_width="25dp"
                            android:layout_height="35dp"
                            android:layout_marginEnd="4dp"
                            android:src="@drawable/star" />

                        <TextView
                            android:id="@+id/reviews_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(100)"
                            android:textColor="@android:color/black"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/product_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/roboto"
                        android:text="Product Name"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/product_brand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/roboto_bold"
                        android:text="Product Brand"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>




    </LinearLayout>

    </HorizontalScrollView>


</LinearLayout>
